<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Kitsune.SubtypeBadge" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Kitsune.TextView.BottomSheetTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Kitsune.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Widget.Kitsune.Button.IconButton.Dense" parent="Widget.Material3.Button.IconButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">@dimen/icon_button_padding</item>
        <item name="android:paddingRight">@dimen/icon_button_padding</item>
        <item name="android:paddingTop">@dimen/icon_button_padding</item>
        <item name="android:paddingBottom">@dimen/icon_button_padding</item>
    </style>

    <style name="Widget.Kitsune.CardView.Surface" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- SearchView Style -->
    <style name="Widget.Kitsune.SearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Kitsune.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preference</item>
        <!-- use Material 3 switch -->
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material3</item>
    </style>

    <style name="Preference.SwitchPreferenceCompat.Material3" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/custom_preference_switch</item>
    </style>

    <style name="ShapeAppearance.Kitsune.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Kitsune.SubtypeBadge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Override default colors of the LinearProgressIndicator on devices with SDK version below 31 -->
    <style name="Glance.AppWidget.LinearProgressIndicator" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
</resources>