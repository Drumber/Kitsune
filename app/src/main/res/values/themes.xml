<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kitsune.DayNight" parent="Theme.Kitsune" />

    <style name="Theme.Kitsune" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowBackground">?android:colorBackground</item>

        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>

        <item name="colorPlaceholderGradientStart">?colorPrimary</item>
        <item name="colorPlaceholderGradientEnd">?colorPrimaryDark</item>

        <item name="preferenceTheme">@style/Theme.Kitsune.PreferenceThemeOverlay</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Kitsune.BottomSheetDialog</item>
        <item name="fullScreenDialogTheme">@style/Theme.Kitsune.FullScreenDialog</item>
    </style>
    
    <style name="Theme.Kitsune.DayNight.Purple" parent="Theme.Kitsune.DayNight">
        <item name="colorPrimary">@color/md_purple_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_purple_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_purple_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_purple_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_purple_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_purple_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_purple_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_purple_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_purple_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_purple_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_purple_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_purple_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_purple_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_purple_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_purple_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_purple_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_purple_theme_light_background</item>
        <item name="colorOnBackground">@color/md_purple_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_purple_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_purple_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_purple_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_purple_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_purple_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_purple_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_purple_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_purple_theme_light_inversePrimary</item>

        <item name="colorPlaceholderGradientStart">?colorPrimary</item>
        <item name="colorPlaceholderGradientEnd">?colorPrimaryVariant</item>

        <item name="fullScreenDialogTheme">@style/Theme.Kitsune.FullScreenDialog.Purple</item>
    </style>

    <!-- FullScreen theme -->
    <style name="Theme.Kitsune.DayNight.FullScreen">
        <item name="android:statusBarColor">@color/translucent_system_overlay</item>
        <item name="android:navigationBarColor">@color/translucent_system_overlay</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="colorSurface">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- SplashScreen theme -->
    <style name="Theme.Kitsune.SplashScreen.DayNight" parent="Theme.Kitsune.SplashScreen" />

    <style name="Theme.Kitsune.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="postSplashScreenTheme">@style/Theme.Kitsune.DayNight</item>
    </style>

    <style name="Theme.Kitsune.FullScreenDialog" parent="Theme.Kitsune.DayNight">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.Kitsune.FullScreenDialog.Purple" parent="Theme.Kitsune.DayNight.Purple">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ThemeOverlay.Kitsune.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="paddingLeftSystemWindowInsets">false</item>
        <item name="paddingRightSystemWindowInsets">false</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.Kitsune.LargeComponent</item>
    </style>

    <style name="TextAppearance.Kitsune.SubtypeBadge" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Kitsune.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Kitsune.TextView.BottomSheetTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Kitsune.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Widget.Kitsune.Button.IconButton.Dense" parent="Widget.Material3.Button.IconButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">@dimen/icon_button_padding</item>
        <item name="android:paddingRight">@dimen/icon_button_padding</item>
        <item name="android:paddingTop">@dimen/icon_button_padding</item>
        <item name="android:paddingBottom">@dimen/icon_button_padding</item>
    </style>

    <style name="Widget.Kitsune.CardView.Surface" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.Kitsune.TextInputLayout.Dense.ExposedDropdownMenu" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Kitsune.AutoCompleteTextView.Dense</item>
    </style>

    <style name="ThemeOverlay.Kitsune.AutoCompleteTextView.Dense" parent="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="autoCompleteTextViewStyle">@style/Widget.Kitsune.AutoCompleteTextView.Dense</item>
    </style>

    <style name="Widget.Kitsune.AutoCompleteTextView.Dense" parent="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- SearchView Style -->
    <style name="Widget.Kitsune.SearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Kitsune.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preference</item>
        <!-- use Material 3 switch -->
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material3</item>
    </style>

    <style name="Preference.SwitchPreferenceCompat.Material3" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/custom_preference_switch</item>
    </style>

    <style name="ShapeAppearance.Kitsune.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Kitsune.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Kitsune.SubtypeBadge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>