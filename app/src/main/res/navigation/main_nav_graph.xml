<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="io.github.drumber.kitsune.ui.main.MainFragment"
        android:label="@string/nav_home"
        tools:layout="@layout/fragment_main" >
        <action
            app:restoreState="true"
            app:launchSingleTop="true"
            android:id="@+id/action_main_fragment_to_detailsFragment"
            app:destination="@id/details_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_exploreFragment2"
            app:destination="@id/explore_fragment" />
    </fragment>

    <fragment
        android:id="@+id/search_fragment"
        android:name="io.github.drumber.kitsune.ui.search.SearchFragment"
        android:label="@string/nav_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_fragment_to_details_fragment"
            app:destination="@id/details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="io.github.drumber.kitsune.ui.profile.ProfileFragment"
        android:label="@string/nav_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_fragment_to_settingsFragment"
            app:destination="@id/settings_fragment" />
    </fragment>
    <fragment
        android:id="@+id/details_fragment"
        android:name="io.github.drumber.kitsune.ui.details.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="model"
            app:argType="io.github.drumber.kitsune.data.model.resource.ResourceAdapter" />
        <action
            android:id="@+id/action_details_fragment_to_manageLibraryBottomSheet"
            app:destination="@id/manage_library_sheet" />
    </fragment>
    <fragment
        android:id="@+id/explore_fragment"
        android:name="io.github.drumber.kitsune.ui.main.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_exploreFragment_to_details_fragment2"
            app:destination="@id/details_fragment" />
        <argument
            android:name="resourceSelector"
            app:argType="io.github.drumber.kitsune.data.model.ResourceSelector" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="io.github.drumber.kitsune.ui.settings.SettingsFragment"
        android:label="@string/nav_settings" />
    <fragment
        android:id="@+id/library_fragment"
        android:name="io.github.drumber.kitsune.ui.library.LibraryFragment"
        android:label="@string/nav_library"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_library_fragment_to_details_fragment"
            app:destination="@id/details_fragment" />
    </fragment>
    <dialog
        android:id="@+id/manage_library_sheet"
        android:name="io.github.drumber.kitsune.ui.details.ManageLibraryBottomSheet"
        android:label="ManageLibraryBottomSheet" >
        <argument
            android:name="model"
            app:argType="io.github.drumber.kitsune.data.model.resource.ResourceAdapter" />
    </dialog>
</navigation>